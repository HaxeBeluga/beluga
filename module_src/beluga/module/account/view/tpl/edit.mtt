<div>
	<h3>$$i18n(change_mail)</h3><br/>
	<form action="::base_url::::path::save" class="form" role="form" method="POST">
		<input class="form-control" id="id" name="id" value="::user.id::" type="hidden">
		<div class="form-group">
			<label for="message">$$i18n(email)</label>
			<input type="email" class="form-control" id="email" name="email" value="::user.email::">
		</div>
		<button type="submit" class="btn btn-default">$$i18n(save)</button>
	</form>
</div>